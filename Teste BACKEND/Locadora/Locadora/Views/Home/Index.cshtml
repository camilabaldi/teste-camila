@{
    ViewBag.Title = "LocaFilmes";
}

<style type="text/css">
    .reaj {
        opacity: 1;
        display: block;
        transition: .5s ease;
        backface-visibility: hidden;
    }

    .middle {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .cont:hover .image {
        opacity: 0.3;
    }

    .cont:hover .middle {
        opacity: 1;
    }

    .text {
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        font-size: 24px;
        padding: 16px 32px;
    }
</style>

<div class="cont">
    <img style="width:100%;" src="https://assets.papelpop.com/wp-content/uploads/2018/12/filmes-20191.jpg" alt="img">
    <div class="middle">
        <div class="text"> Navegue pelo menu ao lado</div>
    </div>
</div>
